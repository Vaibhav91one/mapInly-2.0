generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_DIRECT")
}

model Profile {
  id               String   @id @db.Uuid
  displayName      String   @map("display_name") @default("")
  avatarUrl        String?  @map("avatar_url")
  preferredLocale  String?  @map("preferred_locale")
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @default(now()) @updatedAt @map("updated_at")

  events             Event[]             @relation("EventCreator")
  forums             Forum[]             @relation("ForumCreator")
  comments           Comment[]           @relation("CommentAuthor")
  eventRegistrations EventRegistration[] @relation("EventRegistrationUser")
  eventMessages      EventMessage[]      @relation("EventMessageAuthor")

  @@map("profiles")
}

model Event {
  id               String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  slug             String   @unique
  title            String
  tagline          String   @default("")
  shortDescription String   @map("short_description") @default("")
  date             String   @default("")
  timeRange        String   @map("time_range") @default("")
  location         Json     @default("{}")
  tags             String[] @default([])
  image            String   @default("")
  imageOverlay     String?  @map("image_overlay")
  sourceLocale     String   @map("source_locale") @default("en")
  createdBy        String   @map("created_by") @db.Uuid
  createdAt        DateTime @default(now()) @map("created_at")

  creator           Profile              @relation("EventCreator", fields: [createdBy], references: [id], onDelete: Restrict)
  registrations     EventRegistration[]
  messages         EventMessage[]
  eventTranslations EventTranslation[]

  @@map("events")
}

model EventTranslation {
  eventId         String @map("event_id") @db.Uuid
  locale          String
  title           String
  tagline         String @default("")
  shortDescription String @map("short_description") @default("")

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@id([eventId, locale])
  @@map("event_translations")
}

model EventMessage {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  eventId      String   @map("event_id") @db.Uuid
  userId       String   @map("user_id") @db.Uuid
  content      String
  sourceLocale String?  @map("source_locale") @default("en")
  createdAt    DateTime @default(now()) @map("created_at")

  event      Event                         @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user       Profile                       @relation("EventMessageAuthor", fields: [userId], references: [id], onDelete: Restrict)
  translations EventMessageTranslation[]

  @@map("event_messages")
}

model EventMessageTranslation {
  messageId String @map("message_id") @db.Uuid
  locale    String
  content   String @default("")

  message EventMessage @relation(fields: [messageId], references: [id], onDelete: Cascade)

  @@id([messageId, locale])
  @@map("event_message_translations")
}

model Forum {
  id               String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  slug             String   @unique
  title            String
  tagline          String   @default("")
  shortDescription String   @map("short_description") @default("")
  status           String   @default("active")
  tags             String[] @default([])
  image            String?
  sourceLocale     String   @map("source_locale") @default("en")
  createdBy        String   @map("created_by") @db.Uuid
  createdAt        DateTime @default(now()) @map("created_at")

  creator            Profile   @relation("ForumCreator", fields: [createdBy], references: [id], onDelete: Restrict)
  comments           Comment[]
  forumTranslations  ForumTranslation[]

  @@map("forums")
}

model ForumTranslation {
  forumId          String @map("forum_id") @db.Uuid
  locale           String
  title            String
  tagline          String @default("")
  shortDescription String @map("short_description") @default("")

  forum Forum @relation(fields: [forumId], references: [id], onDelete: Cascade)

  @@id([forumId, locale])
  @@map("forum_translations")
}

model Comment {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  forumId      String   @map("forum_id") @db.Uuid
  parentId     String?  @map("parent_id") @db.Uuid
  authorId     String   @map("author_id") @db.Uuid
  content      String   @default("")
  sourceLocale String?  @map("source_locale") @default("en")
  upvotes      Int      @default(0)
  downvotes    Int      @default(0)
  createdAt    DateTime @default(now()) @map("created_at")

  forum        Forum                 @relation(fields: [forumId], references: [id], onDelete: Cascade)
  parent       Comment?              @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies      Comment[]             @relation("CommentReplies")
  author       Profile               @relation("CommentAuthor", fields: [authorId], references: [id], onDelete: Restrict)
  translations CommentTranslation[]

  @@map("comments")
}

model CommentTranslation {
  commentId String @map("comment_id") @db.Uuid
  locale    String
  content   String @default("")

  comment Comment @relation(fields: [commentId], references: [id], onDelete: Cascade)

  @@id([commentId, locale])
  @@map("comment_translations")
}

model EventRegistration {
  eventId String @map("event_id") @db.Uuid
  userId  String @map("user_id") @db.Uuid

  event Event   @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user  Profile @relation("EventRegistrationUser", fields: [userId], references: [id], onDelete: Cascade)

  @@id([eventId, userId])
  @@map("event_registrations")
}
